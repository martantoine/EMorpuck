    "version": "0.2.0",
    "configurations": [
        {
            "name": "BMP launch",
            "cwd": "${workspaceRoot}/debug",
            "executable": "${workspaceRoot}/build/e-puck2_main-processor_10.12.21_52ffc6b.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "STM32F407",
            "BMPGDBSerialPort" : "COM4", //change to your need
            "runToMain": true,
            "svdFile": "${workspaceRoot}/debug/STM32F407.svd",
            "preLaunchCommands":[
                "set mem inaccessible-by-default off",
            ]
        },
        {
            "name": "BMP attach",
            "cwd": "${workspaceRoot}/debug",
            "executable": "${workspaceRoot}/build/e-puck2_main-processor_10.12.21_52ffc6b.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "interface": "swd",
            "device": "STM32F407",
            "BMPGDBSerialPort" : "COM4", //change to your need
            "runToMain": true,
            "svdFile": "${workspaceRoot}/debug/STM32F407.svd",
            "preLaunchCommands":[
                "set async-remote false",
                "set remote-timeout 20"
            ],
            "preRestartCommands": [
                "enable breakpoint",
                "break main"
            ]
        },
        {
            "name": "GCC Debug WSL",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src-desktop/main",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/src-desktop",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ],
            //"preLaunchTask": "g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
          }
    ]
}